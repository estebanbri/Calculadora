<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    tools:context="com.example.esteban.calculadora.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="vertical"
        android:rowCount="5">

        <Button
            android:id="@+id/id_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="onClick_1"
            android:text="1" />

        <Button
            android:id="@+id/id_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="onClick_4"
            android:text="4" />

        <Button
            android:id="@+id/id_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="onClick_7"
            android:text="7" />

        <Button
            android:id="@+id/id_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="onClick_2"
            android:text="2" />

        <Button
            android:id="@+id/id_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="onClick_5"
            android:text="5" />

        <Button
            android:id="@+id/id_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="onClick_8"
            android:text="8" />

        <Button
            android:id="@+id/id_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="onClick_3"
            android:text="3" />

        <Button
            android:id="@+id/id_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="onClick_6"
            android:text="6" />

        <Button
            android:id="@+id/id_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:onClick="onClick_9"
            android:text="9" />

        <Button
            android:id="@+id/id_suma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:onClick="onClickSuma"
            android:text="+" />

        <Button
            android:id="@+id/id_resta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:onClick="onClickResta"
            android:text="-" />

        <Button
            android:id="@+id/id_multiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:onClick="onClickMultiplicacion"
            android:text="*" />

        <Button
            android:id="@+id/id_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="4"
            android:onClick="onClickDivision"
            android:text="/" />

        <Button
            android:id="@+id/id_aplica_operacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:onClick="onClickAplica_operacion"
            android:text="=" />

        <TextView
            android:id="@+id/id_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:background="#006699"
            android:gravity="end"
            android:textColor="#FFFFFF" />


    </GridLayout>


</RelativeLayout>

