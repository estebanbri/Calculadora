<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:alignmentMode="alignMargins"
    android:background="@android:color/darker_gray"
    android:columnCount="4"
    android:orientation="vertical"
    android:rowCount="5"

    tools:context="com.example.esteban.calculadora.MainActivity">

    <Button
        android:id="@+id/id_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:onClick="onClick_1"
        android:padding="36dp"
        android:text="1"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:onClick="onClick_4"
        android:padding="36dp"
        android:text="4"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:onClick="onClick_7"
        android:padding="36dp"
        android:text="7"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:onClick="onClick_2"
        android:padding="36dp"
        android:text="2"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:onClick="onClick_5"
        android:padding="36dp"
        android:text="5"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:onClick="onClick_8"
        android:padding="36dp"
        android:text="8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:onClick="onClick_3"
        android:padding="36dp"
        android:text="3"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:onClick="onClick_6"
        android:padding="36dp"
        android:text="6"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="3"
        android:onClick="onClick_9"
        android:padding="36dp"
        android:text="9"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_suma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="end"
        android:layout_row="1"
        android:background="#616161"
        android:onClick="onClickSuma"
        android:padding="36dp"
        android:textSize="25sp"
        android:text="+"
        />

    <Button
        android:id="@+id/id_resta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="end"
        android:layout_row="2"
        android:background="#616161"
        android:onClick="onClickResta"
        android:padding="36dp"
        android:text="-"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_multiplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="end"
        android:layout_row="3"
        android:background="#616161"
        android:onClick="onClickMultiplicacion"
        android:padding="36dp"
        android:text="*"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="end"
        android:layout_row="4"
        android:background="#616161"
        android:onClick="onClickDivision"
        android:padding="36dp"
        android:text="/"
        android:textSize="25sp" />

    <Button
        android:id="@+id/id_aplica_operacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:background="#008000"
        android:onClick="onClickAplica_operacion"
        android:padding="36dp"
        android:text="="
        android:textSize="25sp" />

    <TextView
        android:id="@+id/id_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:background="#006699"
        android:gravity="end"
        android:padding="36dp"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />


</GridLayout>




